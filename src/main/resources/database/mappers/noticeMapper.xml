<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.hclass.porject1.notice.NoticeDAO" >
       <select id="getList" parameterType="Pager" resultType="NoticeDTO">
      select * from
      (select rownum R, N.* from 
      (select * from notice where 
      <choose>
         <when test="kind == 'tt'">
            title
         </when>
         
         <when test="kind == 'wr'">
            writer
         </when>
         
         <otherwise>
            contents
         </otherwise>
      </choose>
      like '%'||#{search}||'%' order by num desc) N)
      where R between #{startRow} and #{lastRow}
   </select>
   
   <select id="getCount" resultType="Long" parameterType="Pager">
      select count(num) from notice
      where 
      <choose>
         <when test="kind == 'tt'">
            title
         </when>
         <when test="kind == 'wr'">
            writer
         </when>
         <otherwise>
            contents
         </otherwise>
      </choose>
      like '%' || #{search} || '%'
   </select>
   
       <select id="getOne" resultType="NoticeDTO" parameterType="NoticeDTO">
       select * from notice where num=#{num}
       </select>
   
      <insert id="setOne" parameterType="NoticeDTO">
      <selectKey keyProperty="num" resultType="Long" order="BEFORE">
          select notice_seq.nextval from dual
       </selectKey>
          insert into notice values(notice_seq_num.nextval,#{writer},#{title},#{contents},sysdate,0)
       </insert>
       
     <!-- 조회수 기능 
     <update id="setOne" parameterType="NoticeDTO">
     	update notice
     	set hit=hit+1
     	where num=#{num}
     </update>  
       -->
       
      <update id="setUpdate" parameterType="NoticeDTO">
		update notice set title = #{title}, contents =#{contents} where num=#{num}
	</update>
	
	<delete id="setDelete" parameterType="NoticeDTO">
		delete notice where num =#{num}
	</delete>
    </mapper>