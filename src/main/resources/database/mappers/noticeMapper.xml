<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="notice">

	<select id="list" resultType="com.hclass.project1.notice.NoticeDTO">
		select * from notice
	</select>
	
	<select id="insert" resultType="com.hclass.project1.notice.NoticeDTO">
		insert into notice (bno, title, content, writer, regDate, viewcnt)
		values
		(notice_seq.nextval, #{title}, #{content}, #{writer}, sysdate, 0)
	</select>
    
</mapper>