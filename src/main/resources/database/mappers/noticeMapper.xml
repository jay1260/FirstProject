<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="notice">

	<!-- 공지사항 보기 -->
	<select id="list" resultType="com.hclass.project1.notice.NoticeDTO">
		select * from notice
	</select>
	
	<!-- 공지사항 작성 -->
	<select id="insert" resultType="com.hclass.project1.notice.NoticeDTO">
		insert into notice (bno, title, content, writer, regDate, viewcnt)
		values
		(notice_seq.nextval, #{title}, #{content}, #{writer}, sysdate, 0)
	</select>
    
    <!-- 공지사항 조회 -->
    <select id="detail" resultType="com.hclass.project1.notice.NoticeDTO">
		select * from notice
		where title=#{title}
		<!-- #{값}은 전달된 값-->
	</select>
    
	<!-- 공지사항 수정 -->
	<update id="update">
		update notice
		set title=#{title}, content=#{content}
		where bno=#{bno}
	</update>
</mapper>