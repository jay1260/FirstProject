<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.hclass.project1.pay.PayDAO">
	<insert id="setCharge" parameterType="PayDTO">
		insert into pay_test1 values(pay_test_seq.nextval, #{id}, #{regDate}, #{time})
	</insert>
	
	<select id="getPaymentList" resultType="PayDTO" parameterType="PayDTO">
		select * from pay_test1
	</select>
	
	<select id="getPaymentOne" resultType="PayDTO" parameterType="PayDTO">
		select * from pay_test1 where id = #{id}
	</select>
</mapper>